/* pages/me/me.wxss */

.container {
  width: 100vw;
  height: 80px;
}

.btn {
  width: 60px;
  height: 30px;
  line-height: 28px;
  font-size: 14px;
  border: 1px solid rgb(197, 197, 241);
  background-color: white;
  display: inline-block;
  margin: 20px 15px;
  box-sizing: border-box;
  border-radius: 50px;
  overflow: hidden;
}

.usermsg {
  width: 100%;
  height: 80px;
  padding: 10px 15px;
  box-sizing: border-box;
  display: flex;
}

.avatarview {
  width: 60px;
  height: 60px;
  display: inline-block;
}

.avatar {
  width: 60px;
  height: 60px;
  display: inline-block;
}

.nickname {
  height: 60px;
  padding-left: 20px;
  padding-top: 8px;
  display: inline-block;
}
.userly{
  width: 100%;
  height: 50px;
  line-height: 50px;
  padding-left: 20px;
  border-bottom: 1px solid gainsboro;
  border-top: 1px solid gainsboro;
}

.btnshow {
  display: inline-block;
}

.btnhidden {
  display: none;
}