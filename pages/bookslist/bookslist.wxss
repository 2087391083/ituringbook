/* pages/bookslist/bookslist.wxss */

.nav {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 15rpx 15rpx 30rpx;
  background-color: #2c59b7;
  box-sizing: border-box;
}

.navtop {
  height: 50px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
}

.iconfonttop {
  display: inline-block;
}

.iconfonttop>navigator {
  display: inline-block;
}

.navtop>image {
  width: 180px;
  height: 60rpx;
}

navigator>image {
  width: 18px;
  height: 18px;
}

/* 导航 */

.navbottom {
  width: 100%;
  white-space: nowrap;
  overflow-y: hidden;
}

.navbottomview {
  display: inline-block;
}

.navre {
  display: inline-block;
}

.navnamelist {
  display: inline-block;
  background-color: #1d469d;
  font-size: 0.875rem;
  font-weight: 400;
  text-align: center;
  color: hsla(0, 0%, 100%, 0.54);
  padding-top: 6px;
  padding-bottom: 6px;
  padding-left: 10px;
  padding-right: 10px;
  margin-right: 5px;
  height: 32px;
  line-height: 10px;
  border-radius: 2px;
}

/* 新闻 */

.sec02 {
  height: 50px;
  padding: 20rpx 15rpx;
  overflow: hidden;
}

.content {
  font-size: 14px;
  line-height: 20px;
  letter-spacing: normal;
  color: #6b6d7a;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-top: 5rpx;
}

/* 热门书籍 */

.hotbook {
  width: 100%;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  /* background-color: salmon; */
}

.hotbooknav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 0;
}

.hotbookmsgscroll {
  white-space: nowrap;
}

.hotbooknav>view>image {
  width: 18px;
  height: 18px;
}

.hotbookmore {
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 15px;
  padding-right: 15px;
  border-radius: 99px;
  height: 26px;
  line-height: 26px;
  color: #6b6d7a;
  background-color: #f8f8f8;
  outline: none;
}

.hotitem {
  display: inline-block;
  width: 110px;
  margin-right: 5px;
  box-sizing: border-box;
}

.hotitem>navigator>image {
  width: 110px;
  height: 140px;
}

.bookname {
  padding: 10px 0;
  display: flex;
  width: 100%;
  max-width: 110px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bookauthor {
  font-size: 14px;
  color: #6b6d7a;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
