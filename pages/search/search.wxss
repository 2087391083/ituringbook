/* pages/search/search.wxss */
.searchinput{
  width: 100%;
  height: 50px;
  background-color: #2c59b7;
  padding: 12px 15px;
  box-sizing: border-box;
} 
.Input{
  width: 80%;
  height: 25px;
  display: inline-block;
  margin-right: 10px;
  background-color: #234ca3;
}
.Sub{
  width: 10%;
  height: 25px;
  display: inline-block;
  font-size: 13px;
  padding: 1px;
  line-height: 25px;
  background-color: #234ca3;
}


.container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10px 15px;
}

.bookitem {
  width: 115px;
  padding-bottom: 20px;
}

.bookitemnav {
  display: inline-block;
}

.bookimg {
  width: 95px;
  height: 120px;
}

.bookname {
  max-height: 42px;
  max-width: 95px;
  overflow: hidden;
}

.bookauthor {
  max-width: 95px;
  font-size: 14px;
  color: #6b6d7a;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.title {
  width: 100%;
  height: 50px;
  padding: 10px 15px;
  box-sizing: border-box;
}

.title>text {
  font-size: 18px;
}

.hr{
  width: 100%;
  height: 0px;
  margin-top: 10px;
  border-top: 1px solid gainsboro;
}
