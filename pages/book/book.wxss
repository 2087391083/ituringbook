/* pages/book/book.wxss */

.check {
  font-size: 18px;
}

.uncheck {
  font-size: 14px;
}

.navcheck {
  font-size: 18px;
}

.navuncheck {
  font-size: 14px;
}

.nav {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 15rpx 15rpx 30rpx;
  background-color: #2c59b7;
  box-sizing: border-box;
}

.navtop {
  height: 50px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
}

.iconfonttop {
  display: inline-block;
}

.iconfonttop>navigator {
  display: inline-block;
}

.navtop>image {
  width: 180px;
  height: 60rpx;
}

navigator>image {
  width: 18px;
  height: 18px;
}

/* 导航 */

.navbottom {
  width: 100%;
  white-space: nowrap;
  overflow-y: hidden;
}

.navbottomview {
  display: inline-block;
  color: hsla(0, 0%, 100%, 0.54);
}

.navnamelist {
  display: inline-block;
  font-weight: 400;
  text-align: center;
  padding-top: 6px;
  padding-bottom: 6px;
  padding-left: 10px;
  padding-right: 10px;
  margin-right: 5px;
  height: 32px;
  line-height: 10px;
  border-radius: 2px;
}

/* 03 */

.sec03 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  padding: 10px;
  border-bottom: 1px solid gainsboro;
  box-sizing: border-box;
  font-size: 14px;
}

.sec03Right {
  color: #2c59b7;
}

/*  */

.container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10px 15px;
}

.bookitem {
  width: 115px;
  padding-bottom: 20px;
}

.bookitemnav {
  display: inline-block;
}

.bookimg {
  width: 95px;
  height: 120px;
}

.bookname {
  max-height: 42px;
  max-width: 95px;
  overflow: hidden;
}

.bookauthor,
.booktranslator {
  font-size: 14px;
  color: #6b6d7a;
  overflow: hidden;
  max-width: 95px;
  white-space: nowrap;
  text-overflow: ellipsis;
}
