/* pages/tjbooklist/tjbooklist.wxss */
/* pages/allhotbook/allhotbook.wxss */

.title {
  width: 100%;
  height: 50px;
  padding: 10px 15px;
  box-sizing: border-box;
}

.title>text {
  font-size: 18px;
}

.hr{
  width: 100%;
  height: 0px;
  margin-top: 10px;
  border-top: 1px solid gainsboro;
}

.container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10px 15px;
}

.bookitem {
  width: 115px;
  padding-bottom: 20px;
}

.bookitemnav {
  display: inline-block;
}

.bookimg {
  width: 95px;
  height: 120px;
}

.bookname {
  max-height: 42px;
  max-width: 95px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bookauthor,
.booktranslator {
  font-size: 14px;
  color: #6b6d7a;
  max-width: 95px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
